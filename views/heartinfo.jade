doctype html
html(lang="zh-cmn-Hans")
  head
    // 声明文档使用的字符编码
    meta(charset="utf-8")
    // 优先使用 IE 最新版本和 Chrome
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    // 页面描述
    meta(name="description", content="talks,心里话详细页面")
    // 页面关键词
    meta(name="keywords", content="")
    // 网页作者
    meta(name="author", content="Yi, ya10302@sina.com")
    // 搜索引擎抓取
    meta(name="robots", content="heartinfo,心里话详细页面")
    // 禁止百度转码
    meta(http-equiv="Cache-Control", content="no-siteapp")
    // 为移动设备添加 viewport
    meta(name="viewport", content="initial-scale=1, maximum-scale=3, minimum-scale=1, user-scalable=no")
    // `width=device-width` 会导致 iPhone 5 添加到主屏后以 WebApp 全屏模式打开页面时出现黑边 http://bigc.at/ios-webapp-viewport-meta.orz
    // 启用360浏览器的极速模式(webkit)
    meta(name="renderer", content="webkit")
    // 避免IE使用兼容模式
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    // 针对手持设备优化，主要是针对一些老的不识别viewport的浏览器，比如黑莓
    meta(name="HandheldFriendly", content="true")
    // 微软的老式浏览器
    meta(name="MobileOptimized", content="320")
    // uc强制竖屏
    meta(name="screen-orientation", content="portrait")
    // QQ强制竖屏
    meta(name="x5-orientation", content="portrait")
    // UC强制全屏
    meta(name="full-screen", content="yes")
    // QQ强制全屏
    meta(name="x5-fullscreen", content="true")
    // UC应用模式
    meta(name="browsermode", content="application")
    // QQ应用模式
    meta(name="x5-page-mode", content="app")
    // windows phone 点击无高光
    meta(name="msapplication-tap-highlight", content="no")
    // 禁止缓存
    meta(http-equiv="Expires", content="0")
    meta(http-equiv="Pragma", content="no-cache")
    meta(http-equiv="Cache-control", content="no-cache")
    meta(http-equiv="Cache", content="no-cache")
    title Talks-&#24515;&#37324;&#35805;&#35814;&#32454;&#39029;&#38754;
    link(rel="stylesheet", type="text/css", href="../../css/normalize.css")
    link(rel="stylesheet", type="text/css", href="../../css/heartinfo.css")
    link(rel="stylesheet", type="text/css", href="../../icomoon/style.css")
  body
    .wrapper
      .nav
        .go_back
          a(href="/userindex")
            i.icon-arrow-left2
        .main_title &#24515;&#37324;&#35805;&#27491;&#25991;
      .loading
      .say-item
        .say-item-content
          .say-user
            .user-img-box
              .user-img
                img(src="../../"+heart.userimg, alt="")
            .say-title
              h3
                a(href="/user/"+heart.userid)=heart.nickname
              h6=moment(heart.writetime).format('MM-DD HH:mm:ss')
            span.pushpin
              i.icon-star-empty.collection(data-id='#{heart._id}')
          p.article-content=heart.content
          .article-img-box
            if heart.writeimgs
              ul
                - var imgs = heart.writeimgs.split(',')
                each img in imgs
                  li
                    img(src='../../'+img, alt="")
        .say-item-local-icon
          .location
            i.icon-compass=heart.location
      .menu_heartinfo
        div.comment_num 评论 #{heart.commentnum}
        div.transmit_num 转发 #{heart.transmit}
        div.agree_num 点赞 #{heart.agree}
      .comment_box
        each comment in comments
          .comment_item
            .comment_user_img
              img(src='../../'+comment.userimg, alt="")
            .comment_content
              h3=comment.nickname
              p=comment.content
      .choice-icon
        span
            i.icon-share.transmit(data-id='#{heart._id}')
        span#open_edit
          i.icon-bubble3
        span
            i.icon-like.agree(data-id='#{heart._id}')
      #comment_edit.comment_editbox
        form(action='/userindex/editcomment', method='post')
          input(type='hidden' , name='heartid' , value='#{heart._id}')
          textarea(name='commentcontent', id='')
          button 评论
        #close_edit.comment_close
          i.icon-cancel-circle

    .sendmessage
    #slider_box.user_img_bg_look
      ul#slider
      #go_back_main.go_back_main
        i.icon-arrow-left2
      #index_num.index_num
    p.copy &#29256;&#26435;&#25152;&#26377;:&#21513;&#39318;&#22823;&#23398; &#25216;&#26415;&#25903;&#25345;: &#26472;&#36827;&#30410;
  script(type="text/javascript" , src='../../bootstrap-3.3.4/js/jQuery-2.1.3.js')
  script(type="text/javascript", src="../../js/heartinfo.js")