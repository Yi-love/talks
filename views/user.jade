doctype html
html(lang="zh-cmn-Hans")
  head
    // 声明文档使用的字符编码
    meta(charset="utf-8")
    // 优先使用 IE 最新版本和 Chrome
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    // 页面描述
    meta(name="description", content="user,用户信息首页 , userindex,个人信息")
    // 页面关键词
    meta(name="keywords", content="")
    // 网页作者
    meta(name="author", content="Yi, ya10302@sina.com")
    // 搜索引擎抓取
    meta(name="robots", content="user,用户信息")
    // 禁止百度转码
    meta(http-equiv="Cache-Control", content="no-siteapp")
    // 为移动设备添加 viewport
    meta(name="viewport", content="initial-scale=1, maximum-scale=3, minimum-scale=1, user-scalable=no")
    // `width=device-width` 会导致 iPhone 5 添加到主屏后以 WebApp 全屏模式打开页面时出现黑边 http://bigc.at/ios-webapp-viewport-meta.orz
    // 启用360浏览器的极速模式(webkit)
    meta(name="renderer", content="webkit")
    // 避免IE使用兼容模式
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    // 针对手持设备优化，主要是针对一些老的不识别viewport的浏览器，比如黑莓
    meta(name="HandheldFriendly", content="true")
    // 微软的老式浏览器
    meta(name="MobileOptimized", content="320")
    // uc强制竖屏
    meta(name="screen-orientation", content="portrait")
    // QQ强制竖屏
    meta(name="x5-orientation", content="portrait")
    // UC强制全屏
    meta(name="full-screen", content="yes")
    // QQ强制全屏
    meta(name="x5-fullscreen", content="true")
    // UC应用模式
    meta(name="browsermode", content="application")
    // QQ应用模式
    meta(name="x5-page-mode", content="app")
    // windows phone 点击无高光
    meta(name="msapplication-tap-highlight", content="no")
    // 禁止缓存
    meta(http-equiv="Expires", content="0")
    meta(http-equiv="Pragma", content="no-cache")
    meta(http-equiv="Cache-control", content="no-cache")
    meta(http-equiv="Cache", content="no-cache")
    title &#20010;&#20154;&#20449;&#24687;
    link(rel="stylesheet", type="text/css", href="../css/normalize.css")
    link(rel="stylesheet", type="text/css", href="../css/user.css")
    link(rel="stylesheet", type="text/css", href="../icomoon/style.css")
  body
    .wrapper
      .user-content
        .user-main
          .user-main-contain(style='background-image: url(../'+user.personalization+')')
            .user-head-img-box
              .user-head-img
                .user-img-show
                  img(src='../'+user.userimg, alt="")
                if user._id == me._id
                  .user-photo
                    a(href="/userphoto")
                      i.icon-camera
                  .user-edit
                    a(href="/editinfo")
                      i.icon-pencil2
            .user-name-box
              h1=user.nickname
              h3 &#22909;&#21451;: #{user.friends}  |   &#31881;&#19997;: #{user.fances}
          if user._id != me._id
            .attention
              button 
                a(href="/chat/"+user._id) &#24708;&#24708;&#35805;
              button
                a(href="/address/adduser/"+user._id+"/1") +&#22909;&#21451;
          // 用户主页
          #user-home.pink
          .user-index-item-title
            .user-index-item-title-box
              .item-first
                .item-second
              .user-item-title-content
                h3
                  i.icon-home
                p &#20027;&#39029;
          .user-index
            .fances
              | Ta&#30340;&#31881;&#19997;&#32676;
            .realname
              | &#23454;&#21517;&#35748;&#35777;&#65306;&#20381;&#20381;&#19981;&#33293;
            .user-info-desc
              div
                a(href="#user-info")
                  span 基本信息
                  span
                    i.icon-chevron-right
              div
                span 毕业于
                span=user.school
              div
                span 所在地
                span=user.location
              div
                span 个人简介
                span=user.abstract
            .user-make
              span 擅长领域
              span=user.major
            .user-make
              span 交友宣言
              span=user.friendssay
          // 用户发布的心里话
          #user-heart.pink
          .user-index-item-title
            .user-index-item-title-box
              .item-first
                .item-second
              .user-item-title-content
                h3
                  i.icon-heart
                p &#24515;&#37324;&#35805;
          ol.say-content
            each heart in hearts
              li.say-item
                .say-item-content
                  .say-user
                    .say-user-img-box
                      .say-user-img
                        img(src='../'+heart.userimg, alt="")
                    .say-title
                      h3=heart.nickname
                      h6=moment(heart.writetime).format('MM-DD HH:mm:ss')
                    if user._id == me._id
                      span.pushpin
                        i.icon-trashcan.deleteheart(data-id='#{heart._id}')
                    else
                      span.pushpin
                        i.icon-star-empty.collection(data-id='#{heart._id}')
                  a(href="/userindex/heartinfo/"+heart._id)
                    p.article-content=heart.content
                  .article-img-box
                    if heart.writeimgs
                      ul
                        - var imgs = heart.writeimgs.split(',')
                        each img in imgs
                          li
                            img(src='../'+img, alt="")
                .say-item-local-icon
                  .location
                    i.icon-compass=heart.location
                  .choice-icon
                    span
                      i.icon-share.transmit(data-id='#{heart._id}')=heart.transmit
                    span
                      a(href="/userindex/heartinfo/"+heart._id)
                        i.icon-bubble3=heart.commentnum 
                    span
                      i.icon-like.agree(data-id='#{heart._id}')=heart.agree 
            
          .loading.addmoreheart &#21152;&#36733;&#26356;&#22810;
          // 相册
          #user-camera.pink
          .user-index-item-title
            .user-index-item-title-box
              .item-first
                .item-second
              .user-item-title-content
                h3
                  i.icon-camera
                p &#30456;&#20876;
          .user-camera-content
            if user._id == me._id
              .upbt
                a(href="/uploadpicture").up_bt 上传照片
            ul
              each photo in photos
                - var imgs = photo.imgurl.split(',')
                each img in imgs
                  li
                    a(href="/picturewall/picture/"+photo.userid)
                      img(src='../'+img,alt='')
          // 个人信息
          #user-info.pink
          .user-index-item-title
            .user-index-item-title-box
              .item-first
                .item-second
              .user-item-title-content
                h3
                  i.icon-user-tie
                p &#20010;&#20154;&#20449;&#24687;
          .user-real-info-content
            .info-group
              span 昵称
              span=user.nickname
            .info-group
              span 年龄
              span=user.age
            .info-group
              span 性别
              span=user.sex
            .info-group
              span 毕业学校
              span=user.school
            .info-group
              span 所在地
              span=user.location
            .info-group
              span 住址
              span=user.address
            .info-group
              span 身高
              span=user.height
            .info-group
              span 体重
              span=user.weight
            .info-group
              span 体形
              span=user.figure
            .info-group
              span 民族
              span=user.nation
            .info-group
              span QQ
              span=user.qq
            .info-group
              span 微信
              span=user.weixin
            .info-group
              span 微博
              span=user.microblog
            .info-group
              span 博客
              span=user.blog
            .info-group
              span 个人简介
              span=user.abstract
          p.copy &#29256;&#26435;&#25152;&#26377;:&#21513;&#39318;&#22823;&#23398; &#25216;&#26415;&#25903;&#25345;: &#26472;&#36827;&#30410;
        .user-menu
          .user-menu-box
            div
              a(href="#user-home")
                i.icon-home
            div
              a(href="#user-heart")
                i.icon-heart
            div
              a(href="#user-camera")
                i.icon-camera
            div
              a(href="#user-info")
                i.icon-user-tie
        .main-bar
          .main-back
            a(href="/userindex")
              i.icon-arrow-left2
          .main-nav=me.nickname
          .main-add
            a(href="/search")
              i.icon-user-plus
          a(href="/address")
            .main-add
              i.icon-address-book
      #slider_box.user_img_bg_look
        ul#slider
        #go_back_main.go_back_main
          i.icon-arrow-left2
        #index_num.index_num
    .sendmessage
  script(src='../bootstrap-3.3.4/js/jQuery-2.1.3.js')
  script(type="text/javascript", src="../js/user.js")