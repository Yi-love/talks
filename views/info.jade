doctype html
html(lang='zh-cmn-Hans')
  head
    // 声明文档使用的字符编码
    meta(charset='utf-8')
    // 优先使用 IE 最新版本和 Chrome
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    // 页面描述
    meta(name='description', content='talks,悄悄话首页 , index,同城交友首页')
    // 页面关键词
    meta(name='keywords', content='')
    // 网页作者
    meta(name='author', content='Yi, ya10302@sina.com')
    // 搜索引擎抓取
    meta(name='robots', content='index,悄悄话首页')
    // 禁止百度转码
    meta(http-equiv='Cache-Control', content='no-siteapp')
    // 为移动设备添加 viewport
    meta(name='viewport', content='initial-scale=1, maximum-scale=3, minimum-scale=1, user-scalable=no')
    // `width=device-width` 会导致 iPhone 5 添加到主屏后以 WebApp 全屏模式打开页面时出现黑边 http://bigc.at/ios-webapp-viewport-meta.orz
    // 启用360浏览器的极速模式(webkit)
    meta(name='renderer', content='webkit')
    // 避免IE使用兼容模式
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    // 针对手持设备优化，主要是针对一些老的不识别viewport的浏览器，比如黑莓
    meta(name='HandheldFriendly', content='true')
    // 微软的老式浏览器
    meta(name='MobileOptimized', content='320')
    // uc强制竖屏
    meta(name='screen-orientation', content='portrait')
    // QQ强制竖屏
    meta(name='x5-orientation', content='portrait')
    // UC强制全屏
    meta(name='full-screen', content='yes')
    // QQ强制全屏
    meta(name='x5-fullscreen', content='true')
    // UC应用模式
    meta(name='browsermode', content='application')
    // QQ应用模式
    meta(name='x5-page-mode', content='app')
    // windows phone 点击无高光
    meta(name='msapplication-tap-highlight', content='no')
    // 禁止缓存
    meta(http-equiv='Expires', content='0')
    meta(http-equiv='Pragma', content='no-cache')
    meta(http-equiv='Cache-control', content='no-cache')
    meta(http-equiv='Cache', content='no-cache')
    title Talks-个人资料设置
    link(rel='stylesheet', type='text/css', href='css/normalize.css')
    link(rel='stylesheet', type='text/css', href='css/info.css')
    link(rel='stylesheet', type='text/css', href='icomoon/style.css')
  body
    .wrapper
      .nav
        a(href="/user/"+user._id)
          .go_back 取消
        .main_title 个人资料设置
        #save_now.talk_now 保存
      .loading
      .loading
      .info_menu
        #info 基本信息
        #safe 安全设置
        #password 密码修改
        #other 个性化设置
      #info_content.info_content
        form#info_form(action='/editinfo/info', method='post')
          input(type="hidden" , name="user[_id]" , value="#{user._id}")
          .info_item
            label(for='') 昵称:
            input(type='text',name="user[nickname]" ,value="#{user.nickname}")
          .info_item
            label(for='') 毕业学校:
            input(type='text' , name="user[school]" , value="#{user.school}")
          .info_item
            label(for='') 年龄:
            input(type='text' , name="user[age]" , value="#{user.age}")
          .info_item
            label(for='') 职位:
            input(type='text' , name="user[position]" , value="#{user.position}")
          .info_item
            label(for='') 身高:
            input(type='text' ,name="user[height]" , value="#{user.height}")
          .info_item
            label(for='') 体重:
            input(type='text' , name="user[weight]" , value="#{user.weight}")
          .info_item
            label(for='') 住址:
            input(type='text' , name="user[address]" , value="#{user.address}")
          .info_item
            label(for='') QQ:
            input(type='text' , name="user[qq]" , value="#{user.qq}")
          .info_item
            label(for='') 微信:
            input(type='text' , name="user[weixin]" , value="#{user.weixin}")
          .info_item
            label(for='') 微博:
            input(type='text' , name="user[microblog]" , value="#{user.microblog}")
          .info_item
            label(for='') 博客:
            input(type='text' ,name="user[blog]" ,value="#{user.blog}")
          .info_item_bg
            label(for='') 擅长领域:
            textarea(name="user[major]", id='') #{user.major}
          .info_item_bg
            label(for='') 个人简介:
            textarea(name="user[abstract]", id='') #{user.abstract}
          .info_item_bg
            label(for='') 交友宣言:
            textarea(name="user[friendssay]", id='') #{user.friendssay}
      #safe_content.safe_content
        form#safe_form(action='/editinfo/safe', method='post')
          input(type="hidden" , name="user[_id]", value="#{user._id}")
          if user.email
            .info_item
              label(for='') 旧邮箱:
              input(type='email',name="email")
          .info_item
            label(for='') 新邮箱:
            input(type='email' , name="newemail")
          .info_item
            label(for='') 密码:
            input(type='password' , name="password")
      #password_content.password_content
        form#password_form(action='/editinfo/password', method='post')
          input(type="hidden" , name="user[_id]" ,value="#{user._id}")
          .info_item
            label(for='') 旧密码:
            input(type='password',name="oldpassword")
          .info_item
            label(for='') 新密码:
            input(type='password',name="password")
          .info_item
            label(for='') 重复密码:
            input(type='password' , name="repassword")
          if user.email
            .info_item
              label(for='') 安全邮箱:
              input(type='email' , name="email")
      #other_content.userphoto_content
        #imageShow.user_img_box
          img(src=user.personalization, alt='')
        #imageErrorInfo
        form#other_form(action='/editinfo/other', enctype='multipart/form-data', method='post')
          .uploading
            input#imagePath(type='file', name="personalization" , accept='image/*', onchange='onFileChange(this,105857600)')
            .up_bt 上传
